<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
	version="2.0">
	<!-- Define persistence unit -->
	<persistence-unit name="my-persistence-unit"
		transaction-type="RESOURCE_LOCAL">

		<provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

		<class>datenmodel.Ergebnis</class>

		<class>datenmodel.Regel</class>
		<class>datenmodel.Spiel</class>
		<class>datenmodel.Spieler</class>
		<class>datenmodel.Spielkarte</class>
		<class>datenmodel.Spielrunde</class>


		<properties>
			<!-- database connection -->
			<property name="javax.persistence.jdbc.driver"
				value="com.mysql.jdbc.Driver" />
			<property name="javax.persistence.jdbc.url"
				value="jdbc:mysql://localhost:3306/maumauDB" />
			<property name="javax.persistence.jdbc.user" value="root" />
			<property name="javax.persistence.jdbc.password"
				value="Tzq6KJVTY160VOzX" />

			<property
				name="javax.persistence.schema-generation.database.action"
				value="drop-and-create" />
				<property name="hibernate.show_sql" value="true" />
		</properties>
	</persistence-unit>
</persistence>